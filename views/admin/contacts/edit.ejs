<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2 style="text-align: center;">Edição de contatos da Agenda</h2>
            </div>

            <div class="card-body">
                <form method="POST" action="/admin/contacts/update">
                    <label>Nome:</label>
                    <input type="text" class="form-control" name="nome" value="<%=contato.nome%>">
                    <br>
                    <label>Telefone:</label>
                    <input type="text" class="form-control" name="telefone" value="<%=contato.telefone%>">
                    <br>
                    <label>Email:</label>
                    <input type="email" class="form-control" name="email" value="<%=contato.email%>">
                    <br>
                    <input type="hidden" name="id" value="<%=contato.id%>">
                    <button class="btn btn-dark btn-block">Editar contato</button>
                </form>
            </div>
        </div>
    </div> 
</body>
